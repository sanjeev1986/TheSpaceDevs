<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/screen_margin"
    android:elevation="10dp"
    android:padding="@dimen/list_item_padding">

    <ImageView
        android:id="@+id/imageSpacecraft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:minHeight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/colorAccent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/titleSpacecraft"
        style="@style/TextAppearance.DS.ListItem.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/imageSpacecraft"
        tools:text="Cygnus Enhanced" />

    <com.google.android.material.chip.Chip
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="ACTIVE"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/humanRated"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleSpacecraft" />

    <com.google.android.material.chip.Chip
        android:id="@+id/humanRated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="HUMAN RATED"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/crewCapacity"
        app:layout_constraintStart_toEndOf="@id/status"
        app:layout_constraintTop_toBottomOf="@id/titleSpacecraft" />

    <com.google.android.material.chip.Chip
        android:id="@+id/crewCapacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="CREW CAPACITY: 5"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/humanRated"
        app:layout_constraintTop_toBottomOf="@id/titleSpacecraft" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/company"
        style="@style/TextAppearance.DS.ListItem.SubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="BOEING"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/humanRated" />

</androidx.constraintlayout.widget.ConstraintLayout>